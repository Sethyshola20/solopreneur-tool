{
    "name": "solopreneur-tool-monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:web": "npm run dev --workspace=@solopreneur/web",
        "start:mobile": "npm run start --workspace=@solopreneur/mobile",
        "build": "npm run build --workspaces",
        "lint": "npm run lint --workspaces"
    },
    "overrides": {
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "@types/react": "19.0.0",
        "@types/react-dom": "19.0.0"
    },
    "devDependencies": {
        "typescript": "^5.5.3"
    }
}